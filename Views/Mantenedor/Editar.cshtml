@model ClienteModel
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
  <div class="card-header">
    Editar Cliente
  </div>
  <div class="card-body">
    

      <form asp-action="Editar" asp-controller="Mantenedor" method="post">

           <input asp-for="Id_c" type="hidden" class="form-control">
      <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input asp-for="nom_c" type="text" class="form-control">
        <span asp-validation-for="nom_c" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label class="form-label">Telefono</label>
        <input asp-for="tel_c" type="text" class="form-control">
        <span asp-validation-for="tel_c" class="text-danger"></span>
      </div>
       <div class="mb-3">
        <label class="form-label">Correo</label>
        <input asp-for="cor_c" type="text" class="form-control">
        <span asp-validation-for="cor_c" class="text-danger"></span>
      </div>
      <button type="submit" class="btn btn-primary">Guardar</button>
      <a asp-action="Listar" asp-controller="Mantenedor" class="btn btn-warning">Volver a la lista</a>
    </form>


  </div>
</div>

